			function setLanguage(lang) {
				document.querySelectorAll('[data-i18n]').forEach(el => {
					const key = el.getAttribute('data-i18n');
					if (translations[lang] && translations[lang][key]) {
						if (['whtc_eng_main', 'ltt_lock_head', 'safety_academy_head', 'hero_line1', 'hero_line2', 'contact_title', 'hero_sub'].includes(key)) {
							el.innerHTML = translations[lang][key];
						} else {
							el.textContent = translations[lang][key];
						}
					}
				});
				document.getElementById('btn-ro').classList.toggle('active', lang === 'ro');
				document.getElementById('btn-en').classList.toggle('active', lang === 'en');
			}

			// Expose to window for button onclicks
			window.setLanguage = setLanguage;
