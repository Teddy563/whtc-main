<script>
    const bgLayers = document.querySelectorAll('.bg-layer');
    let currentBgIndex = 0;

    function rotateBackground() {
        bgLayers[currentBgIndex].classList.remove('active', 'opacity-100');
        bgLayers[currentBgIndex].classList.add('opacity-0');
        
        currentBgIndex = (currentBgIndex + 1) % bgLayers.length;
        
        bgLayers[currentBgIndex].classList.remove('opacity-0');
        bgLayers[currentBgIndex].classList.add('active', 'opacity-100');
    }

    setInterval(rotateBackground, 4000);
</script>

<style>
    .bg-layer {
        transform: scale(1.1);
        animation: zoomEffect 20s infinite alternate;
    }
    @keyframes zoomEffect {
        0% { transform: scale(1); }
        100% { transform: scale(1.1); }
    }
</style>
