<style is:global>
	.sharp { border-radius: 0 !important; }
	.btn-hover-slide {
		background-size: 200% 100%;
		background-image: linear-gradient(to right, #111 50%, #f16215 50%);
		transition: background-position 0.3s cubic-bezier(0.19, 1, 0.22, 1);
	}
	.btn-hover-slide:hover { background-position: -100% 0; }
	
	.lang-switch-btn {
		font-weight: 700;
		color: #4b5563; /* Changed from #6b7280 (gray-500) to #4b5563 (gray-700) for better contrast */
		transition: color 0.3s, opacity 0.3s;
	}
	.lang-switch-btn:hover { color: #111; opacity: 1; } /* Change color on hover to black or specific active color */
	.lang-switch-btn.active {
		color: #111; /* Active state color (black) */
		opacity: 1;
		text-decoration: underline;
		text-decoration-color: #f16215;
		text-underline-offset: 4px;
	}
</style>
